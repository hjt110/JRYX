<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.navigation.EditBusinessActivity">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        >

        <View
            android:layout_width="2dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/red_little"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="个人说明"
            android:textColor="@color/color_3"
            android:textSize="@dimen/textSize_14"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_kuang_editbusiniss">

        <EditText
            android:id="@+id/edit_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:hint="啦啦啦啦"
            android:textColor="@color/color_6"
            android:textSize="@dimen/textSize_13"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <View
            android:layout_width="2dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/red_little"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="业务范围"
            android:textColor="@color/color_3"
            android:textSize="@dimen/textSize_14"
            />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="37dp"
            android:src="@mipmap/add_circle"
            />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/garbage"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="请填写您所从事的业务范围，让其他用户对您更加了解（放空则不显示）"
        android:maxLines="1"
        android:textColor="@color/ab"
        android:textSize="@dimen/textSize_10"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:text="啦啦啦"
            android:textColor="@color/color_3"
            android:textSize="@dimen/textSize_13"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_logo"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="17dp"
            android:text="http://"
            android:textColor="@color/color_3"
            android:textSize="@dimen/textSize_13"
            />


        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="100dp"
            android:layout_height="71dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@color/color_e"
            android:gravity="center"
            android:text="logo"
            android:textColor="@color/ab"
            android:textSize="@dimen/textSize_14"
            />

    </RelativeLayout>

</LinearLayout>