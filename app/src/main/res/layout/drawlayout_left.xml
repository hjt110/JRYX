<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.tong.library.view.CircleImageView
        android:id="@+id/img_header"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/ic_head"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_header"
        android:layout_toRightOf="@+id/img_header"
        android:text="请叫我傲娇女王"
        android:textColor="@color/color_3"
        android:textSize="@dimen/textSize_15"/>

    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_header"
        android:layout_toRightOf="@+id/img_header"
        android:text="世界上最好关注的"
        android:textColor="@color/color_9"
        android:textSize="@dimen/textSize_12"
        />

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-1dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/shape_kuang_left"
        android:gravity="center"
        android:text="签到"
        android:textColor="@color/red_little"
        android:textSize="@dimen/textSize_11"
        />

    <LinearLayout
        android:id="@+id/ll_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_header"
        android:layout_marginTop="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="动态"
            android:textColor="@color/color_6"
            android:textSize="@dimen/textSize_12"
            />

        <TextView
            android:id="@+id/tv_giveGood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/color_6"
            android:textSize="@dimen/textSize_12"
            />

        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="粉丝"
            android:textColor="@color/color_6"
            android:textSize="@dimen/textSize_12"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_state"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="24dp"
        >

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_setting"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="设置"
            android:textColor="@color/color_5"
            android:textSize="@dimen/textSize_11"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_setting"
        android:layout_marginLeft="80dp"
        >

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="私信"
            android:textColor="@color/color_5"
            android:textSize="@dimen/textSize_11"
            />

    </RelativeLayout>

</RelativeLayout>
